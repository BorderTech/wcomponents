{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"baseUrl": ".",
		"lib": ["es2019", "dom"],
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"types": ["node"],
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"paths": {
			"wc/dom/*": ["src/main/js/wc/dom/*"],
			"wc/*": ["src/main/js/wc/*"],
			"lib/sprintf": ["node_modules/sprintf-js/src/sprintf.js"],
			"lib/socketio/socket.io": ["node_modules/socket.io-client/dist/socket.io.js"],
			"axe": ["node_modules/axe-core/axe.js"],
			"lib/i18next.js": ["node_modules/i18next/dist/esm/i18next.js"],
			"lib/fabric": ["node_modules/fabric/dist/fabric.js"]
		}
	}
}
