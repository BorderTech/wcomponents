{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"baseUrl": ".",
		"lib": ["es2019", "dom"],
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"types": ["node", "jasmine"],
		"typeRoots": [
			"node_modules/@types"
		],
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"paths": {
			"wc/dom/*": ["src/main/js/wc/dom/*"],
			"wc/*": ["src/main/js/wc/*"],
			"axe": ["node_modules/axe-core/axe.js"],
			"sass": ["node_modules/sass/sass.js"]
		}
	}
}
