{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"baseUrl": ".",
		"lib": ["es2019", "dom"],
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"types": ["node"],
		"allowSyntheticDefaultImports": true,
		"paths": {
			"wc/dom/*": ["src/main/js/wc/dom/*.mjs", "src/main/js/wc/dom/*.js"],
			"wc/*": ["src/main/js/wc/*.mjs", "src/main/js/wc/*.js"],
			"lib/sprintf": ["node_modules/sprintf-js/src/sprintf.js"],
			"lib/socketio/socket.io": ["node_modules/socket.io-client/dist/socket.io.js"],
			"axe": ["node_modules/axe-core/axe.js"],
		}
	}
}
