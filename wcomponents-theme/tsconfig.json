{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"baseUrl": ".",
		"lib": ["es2019", "dom"],
		"target": "ES2020",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"esModuleInterop": true,
		"types": ["node", "jasmine", "@testing-library/jasmine-dom", "jasmine-ajax"],
		"typeRoots": [
			"node_modules/@types"
		],
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"paths": {
			"wc/*": ["src/main/js/wc/*"]
		}
	}
}
