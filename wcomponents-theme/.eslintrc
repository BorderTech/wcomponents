{
	"parserOptions": {
		"ecmaVersion": 6
	},
	"env": {
		"browser": true,
		"amd": true
	},
	"extends": "eslint:recommended",
	"rules": {
		"vars-on-top": "warn",
		"no-console": 0,
		"no-shadow": 2,
		"brace-style": 2,
		"semi": [2, "always"],
		"space-before-blocks": [2, "always"],
		"spaced-comment": [2, "always"],
		"keyword-spacing": 2,
		"indent": [2, "tab", { "SwitchCase": 1 } ],
		"quotes": 0,
		"no-prototype-builtins" : 0,
		"no-constant-condition": 0
	},
	"globals": {
		"Promise": true,
		"DataView": true,
		"intern": true,
		"globalThis": true
	},
	"overrides": [{
		"files": [ "*.mjs" ],
		"parserOptions": {
			"sourceType": "module",
			"ecmaVersion": 2021
		}}, {
		"files": [ "scripts/*.js", "build-js.js" ],
		"parserOptions": {
			"ecmaVersion": 2020
		}
	}]
}
