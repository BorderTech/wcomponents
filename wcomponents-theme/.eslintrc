{
	"parserOptions": {
		"ecmaVersion": 2019,
		"sourceType": "module"
	},
	"env": {
		"es6": true,
		"browser": true
	},
	"plugins": ["jasmine"],
	"extends": "eslint:recommended",
	"rules": {
		"vars-on-top": "warn",
		"no-console": 0,
		"no-shadow": 2,
		"brace-style": 2,
		"semi": [2, "always"],
		"space-before-blocks": [2, "always"],
		"spaced-comment": [2, "always"],
		"keyword-spacing": 2,
		"indent": [2, "tab", { "SwitchCase": 1 } ],
		"quotes": 0,
		"no-prototype-builtins" : 0,
		"no-constant-condition": 0
	},
	"globals": {
		"globalThis": true,
		"global": true
	},
	"overrides": [
		{
			"files": [ "scripts/*.js", "build-js.js" ],
			"env": {
				"browser": false,
				"node": true
			}
		},
		{
			"files": [ "src/test/**/*" ],
			"env": {
				"browser": true,
				"jasmine": true
			}
		}
	]
}
