<project name="BuildJSDoc" default="build" >
	<description>Builds the JSDoc3 documentation for the current WComponent theme. Assumes ANT 1.9.1+</description>
	<import file="build-import.xml"/>

  <target name="build" desciption = "do nothing."/>
	<!--
		Build the JSDoc
	-->
	<target name="document" description="Building the JSDoc.">
		<stopwatch name="node-jsdoc" action="start"/>
		<echo level="verbose">./node/node ./node_modules/jsdoc/jsdoc.js -c jsdoc.config.json</echo>
		<nodejs.exec failonerror="false" cwd="${basedir}">
			<arguments>
				<arg value="${basedir}/node_modules/jsdoc/jsdoc.js"/>
				<arg value="-c"/>
				<arg value="jsdoc.json"/>
			</arguments>
		</nodejs.exec>
		<stopwatch name="node-jsdoc" action="total"/>
	</target>
</project>
