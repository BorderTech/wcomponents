<div class="wc-row">
	<div class="wc_img_editpane wc-column">
		<div class="wc_img_canvas">
			<canvas id="wc_img_canvas"></canvas>
		</div>
	</div>
	<div class="wc_img_cap wc-column" style="height: {{style.height}}px">
		<div id="wc_img_video_container"></div>
		<button title="{{t '${wc.ui.imageEdit.message.snap}'}}" type="button" class="wc_btn_snap wc_btn_icon" name="snap"><span class="wc-off">{{t '${wc.ui.imageEdit.action.snap}'}}</span></button>
	</div>
	<div class="wc_img_nocap wc-column">
		<p>{{t '${wc.ui.imageEdit.message.nocapture}'}}</p>
	</div>
	<div class="wc_img_controls wc-column">
		<fieldset>
			<legend>{{t '${wc.ui.imageEdit.rotate}'}}</legend>
			<button title="{{t '${wc.ui.imageEdit.message.rotate.left90}'}}" type="button" class="wc_btn_anticlock90 wc_btn_icon" name="anticlock90"><span class="wc-off">{{t '${wc.ui.imageEdit.rotate.left90}'}}</span></button>
			<button title="{{t '${wc.ui.imageEdit.message.rotate.left}'}}" type="button" class="wc_btn_anticlock wc_btn_icon" name="anticlock"><span class="wc-off">{{t '${wc.ui.imageEdit.rotate.left}'}}</span></button>
			<button title="{{t '${wc.ui.imageEdit.message.rotate.right}'}}" type="button" class="wc_btn_clock wc_btn_icon" name="clock"><span class="wc-off">{{t '${wc.ui.imageEdit.rotate.right}'}}</span></button>
			<button title="{{t '${wc.ui.imageEdit.message.rotate.right90}'}}" type="button" class="wc_btn_clock90 wc_btn_icon" name="clock90"><span class="wc-off">{{t '${wc.ui.imageEdit.rotate.right90}'}}</span></button>
		</fieldset>
		<fieldset>
			<legend>{{t '${wc.ui.imageEdit.zoom}'}}</legend>
			<button title="{{t '${wc.ui.imageEdit.message.zoom.out}'}}" type="button" class="wc_btn_out wc_btn_icon" name="out"><span class="wc-off">{{t '${wc.ui.imageEdit.zoom.out}'}}</span></button>
			<button title="{{t '${wc.ui.imageEdit.message.zoom.in}'}}" type="button" class="wc_btn_in wc_btn_icon" name="in"><span class="wc-off">{{t '${wc.ui.imageEdit.zoom.in}'}}</span></button>
			{{#feature.face}}
			<button title="{{message.face}}" type="button" class="wc_btn_face wc_btn_icon" name="face"><span class="wc-off">{{action.face}}</span></button>
			{{/feature.face}}
		</fieldset>
		<fieldset class="wc_img_buttons">
			<legend>{{t '${wc.ui.imageEdit.move}'}}</legend>
			<button title="{{t '${wc.ui.imageEdit.message.move.up}'}}" type="button" class="wc_btn_up wc_btn_icon" name="up"><span class="wc-off">{{t '${wc.ui.imageEdit.move.up}'}}</span></button>
			<button title="{{t '${wc.ui.imageEdit.message.move.left}'}}" type="button" class="wc_btn_left wc_btn_icon" name="left"><span class="wc-off">{{t '${wc.ui.imageEdit.move.left}'}}</span></button>
			<button title="{{t '${wc.ui.imageEdit.message.move.right}'}}" type="button" class="wc_btn_right wc_btn_icon" name="right"><span class="wc-off">{{t '${wc.ui.imageEdit.move.right}'}}</span></button>
			<button title="{{t '${wc.ui.imageEdit.message.move.down}'}}" type="button" class="wc_btn_down wc_btn_icon" name="down"><span class="wc-off">{{t '${wc.ui.imageEdit.move.down}'}}</span></button>
		</fieldset>
		<fieldset class="wc_img_capture">
			<legend>{{t '${wc.ui.imageEdit.capture}'}}</legend>
			<button title="{{t '${wc.ui.imageEdit.message.camera}'}}" type="button" class="wc_btn_camera wc_btn_icon" name="camera"><span class="wc-off">{{t '${wc.ui.imageEdit.action.camera}'}}</span></button>
		</fieldset>
		<div>
			<button title="{{t '${wc.ui.imageEdit.message.reset}'}}" type="button" class="wc_btn_reset wc_btn_icon" name="reset"><span class="wc-off">{{t '${wc.ui.imageEdit.action.reset}'}}</span></button>
			<button title="{{t '${wc.ui.imageEdit.message.cancel}'}}" type="button" class="wc_btn_cancel wc_btn_icon" name="cancel"><span class="wc-off">{{t '${wc.ui.imageEdit.action.cancel}'}}</span></button>
			<button title="{{t '${wc.ui.imageEdit.message.save}'}}" type="button" class="wc_btn_save wc_btn_icon" name="save"><span class="wc-off">{{t '${wc.ui.imageEdit.action.save}'}}</span></button>
		</div>
	</div>
</div>
