						<nodejs.exec cwd="${basedir}" failonerror="true" spawn="false">
							<arguments>
								<arg value="${intern.executable}"/>
								<arg value="config=@{relativePathToTestdir}/@{configModule}"/>
							</arguments>
						</nodejs.exec>
					</sequential>
				</parallel>
				-->
		</sequential>
	</macrodef>
</project>
