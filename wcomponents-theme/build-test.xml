					</echo>
				</else>
			</if>
			
			
			<!--
			<echo>${phantomjs.binary} - -webdriver=4444</echo>
				<parallel>
					<daemons>
						<wc.exec executable="${phantomjs.binary}" needscmd="false" spawn="false">
							<arguments>
								<arg value="- -webdriver=4444"/>
							</arguments>
						</wc.exec>
					</daemons>
					<sequential>
						<sleep seconds="3"/>
